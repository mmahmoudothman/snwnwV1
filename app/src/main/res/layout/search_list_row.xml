<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_10">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="2dp"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/allview"
        >
        <ImageView
            android:id="@+id/item_img"
            android:layout_width="@dimen/margin_100"
            android:layout_height="@dimen/margin_100"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_10"
            />
        <com.snwnw.snwnw.presentation.ui.views.English_Textview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/item_img"
            android:layout_alignTop="@+id/item_img"
            android:textColor="@color/lila"
            android:textSize="@dimen/text_size_16"
            android:text="fffffffffffffff"
            android:id="@+id/item_name"
            android:textStyle="bold"
            />

        <com.snwnw.snwnw.presentation.ui.views.English_Textview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/item_img"
            android:textColor="@color/light_lila"
            android:textSize="@dimen/text_size_14"
            android:text="fffff"
            android:id="@+id/item_details"
            android:textStyle="bold"
            android:layout_below="@+id/item_name"
            android:layout_marginTop="@dimen/margin_10"
            />
        <RelativeLayout
            android:id="@+id/rating_view"
            android:layout_width="@dimen/margin_70"
            android:layout_height="@dimen/margin_70"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_star_bg"
            android:layout_alignTop="@+id/item_name"
            android:layout_marginLeft="@dimen/margin_30"
            >
            <com.snwnw.snwnw.presentation.ui.views.English_Textview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="4.5"
                android:textSize="@dimen/text_size_14"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:id="@+id/rating_val"
                />
        </RelativeLayout>
        <com.snwnw.snwnw.presentation.ui.views.English_Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_30"
            android:background="@drawable/remove_bg"
            android:text="@string/remove_from_fav"
            android:padding="@dimen/margin_5"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_14"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/item_img"
            android:id="@+id/add_to_fav"
            android:visibility="gone"
            />
    </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>