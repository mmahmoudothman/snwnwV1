<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <com.snwnw.snwnw.presentation.ui.views.English_EditText
        android:id="@+id/header_search_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_in_my_list"
        android:textColorHint="@color/color2"
        android:textColor="@color/color2"
        android:gravity="right|center_vertical"
        android:textSize="@dimen/text_size_14"
        android:layout_toLeftOf="@+id/menu_btn"
        android:layout_toRightOf="@+id/notify_icon"
        android:background="@drawable/rounded_bg_white"
        android:layout_marginTop="@dimen/margin_60"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"
        android:padding="@dimen/margin_5"
        android:drawableRight="@android:drawable/ic_menu_search"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/rounded_bg_white"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"

        >
        <ImageView
            android:id="@+id/ic_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_my_location"
            android:padding="@dimen/margin_5"
            android:layout_centerVertical="true"
            />
        <Spinner
            android:id="@+id/city_spinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:gravity="right"
            android:padding="@dimen/margin_5"
            android:textColor="@color/lila"
            android:textSize="@dimen/margin_20"
            android:textStyle="bold"
            android:hint="@string/place"
            android:background="@null"
            android:layout_toLeftOf="@+id/ic_location"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/rounded_bg_white"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"

        >
        <ImageView
            android:id="@+id/ic_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_my_location"
            android:padding="@dimen/margin_5"
            android:layout_centerVertical="true"
            />
        <Spinner
            android:id="@+id/type_spinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:gravity="right"
            android:padding="@dimen/margin_5"
            android:textColor="@color/lila"
            android:textSize="@dimen/margin_20"
            android:textStyle="bold"
            android:hint="@string/place"
            android:background="@null"
            android:layout_toLeftOf="@+id/ic_type"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/rounded_bg_white"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"

        >
        <ImageView
            android:id="@+id/ic_sub_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_my_location"
            android:padding="@dimen/margin_5"
            android:layout_centerVertical="true"
            />
        <Spinner
            android:id="@+id/sub_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:gravity="right"
            android:padding="@dimen/margin_5"
            android:textColor="@color/lila"
            android:textSize="@dimen/margin_20"
            android:textStyle="bold"
            android:hint="@string/place"
            android:background="@null"
            android:layout_toLeftOf="@+id/ic_sub_type"
            />
    </RelativeLayout>

    <com.snwnw.snwnw.presentation.ui.views.English_Button
        android:id="@+id/search_place_btn"
        android:layout_width="@dimen/margin_120"
        android:layout_height="@dimen/margin_40"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_40"
        android:background="@drawable/gradient_orange_color"
        android:gravity="center"
        android:padding="@dimen/margin_10"
        android:text="@string/search"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold" />
</LinearLayout>
    </ScrollView>
</LinearLayout>
