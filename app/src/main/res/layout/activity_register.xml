<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/toolbar"></include>
        </LinearLayout>
        <com.snwnw.snwnw.presentation.ui.views.English_Textview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lila"
            android:text="@string/register"
            android:textSize="@dimen/margin_20"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_40"
            android:textStyle="bold"
            android:layout_below="@+id/toolbar"
            android:id="@+id/enter_txt"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/enter_txt"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/btnLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:id="@+id/testbutton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save"
                    android:orientation="vertical"
                    >
                <com.snwnw.snwnw.presentation.ui.views.English_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lila"
                    android:text="@string/last_name"
                    android:textSize="@dimen/margin_20"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_20"
                    android:textStyle="bold"
                    android:layout_below="@+id/toolbar"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/margin_20"
                    />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40"
                        android:background="@drawable/round_edit_txt"
                        android:layout_margin="@dimen/margin_10"
                        android:id="@+id/lastname"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/cancelButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel">

                    <com.snwnw.snwnw.presentation.ui.views.English_Textview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lila"
                        android:text="@string/first_name"
                        android:textSize="@dimen/margin_20"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_20"
                        android:textStyle="bold"
                        android:layout_below="@+id/toolbar"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/margin_20"
                        />
                    <EditText
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40"
                        android:background="@drawable/round_edit_txt"
                        android:layout_margin="@dimen/margin_10"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:orientation="vertical"
                >
                <com.snwnw.snwnw.presentation.ui.views.English_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lila"
                    android:text="@string/email_address"
                    android:textSize="@dimen/margin_20"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_20"
                    android:textStyle="bold"
                    android:layout_below="@+id/toolbar"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/margin_20"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40"
                    android:background="@drawable/round_edit_txt"
                    android:layout_margin="@dimen/margin_10"
                    android:id="@+id/email"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save"
                    android:orientation="vertical"
                    >
                    <com.snwnw.snwnw.presentation.ui.views.English_Textview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lila"
                        android:text="@string/appear_password"
                        android:textSize="@dimen/margin_20"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_20"
                        android:textStyle="bold"
                        android:layout_below="@+id/toolbar"
                        android:gravity="right"
                        android:visibility="gone"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/margin_20"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cancel">

                    <com.snwnw.snwnw.presentation.ui.views.English_Textview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lila"
                        android:text="@string/password"
                        android:textSize="@dimen/margin_20"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_20"
                        android:textStyle="bold"
                        android:layout_below="@+id/toolbar"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/margin_20"
                        />

                </LinearLayout>

            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40"
                    android:background="@drawable/round_edit_txt"
                    android:layout_margin="@dimen/margin_10"
                    android:id="@+id/password"
                    android:inputType="textPassword"
                    android:gravity="right|center"

                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"

                    />
                <ImageView
                    android:onClick="showPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/eye"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/city_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save"
                android:orientation="vertical"
                >
                <com.snwnw.snwnw.presentation.ui.views.English_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lila"
                    android:text="@string/mother_city"
                    android:textSize="@dimen/margin_20"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_20"
                    android:textStyle="bold"
                    android:layout_below="@+id/toolbar"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/margin_20"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1.3"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"

                    android:background="@drawable/round_edit_txt"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/ccp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="right"
                        android:layout_marginLeft="5dp"
                        android:paddingRight="50dp"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/menu_down"
                        tools:ignore="VectorDrawableCompat" />

                </RelativeLayout>
                <!--<Spinner-->
                    <!--android:id="@+id/ccp"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="@dimen/margin_40"-->
                    <!--android:layout_marginTop="@dimen/margin_10"-->
                    <!--/>-->

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel">

                <com.snwnw.snwnw.presentation.ui.views.English_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lila"
                    android:text="@string/city"
                    android:textSize="@dimen/margin_20"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_20"
                    android:textStyle="bold"
                    android:layout_below="@+id/toolbar"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/margin_20"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.3"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_edit_txt"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/city_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:gravity="right"
                        android:layout_marginLeft="5dp"
                        android:paddingRight="50dp"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/menu_down"
                        tools:ignore="VectorDrawableCompat" />

                </RelativeLayout>
                <!--<Spinner-->
                    <!--android:id="@+id/city_spinner"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="@dimen/margin_40"-->
                    <!--android:layout_margin="@dimen/margin_10"-->

                    <!--/>-->
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mobile_layout"
            android:layout_below="@+id/city_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:orientation="vertical"
            >
            <com.snwnw.snwnw.presentation.ui.views.English_Textview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lila"
                android:text="@string/mobile_number"
                android:textSize="@dimen/margin_20"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_20"
                android:textStyle="bold"
                android:layout_below="@+id/toolbar"
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_20"
                />
            <EditText
                android:id="@+id/edt_mobile_num"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40"
                android:background="@drawable/round_edit_txt"
                android:layout_margin="@dimen/margin_10"
                android:inputType="number"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                />
        </LinearLayout>
        <com.snwnw.snwnw.presentation.ui.views.English_Button
            android:layout_width="@dimen/margin_140"
            android:layout_height="@dimen/margin_40"
            android:id="@+id/register"
            android:text="@string/register"
            android:textColor="@color/white"
            android:layout_below="@+id/mobile_layout"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_40"
            android:layout_marginBottom="@dimen/margin_40"
            android:background="@drawable/gradient_blue_bg"
            />
    </LinearLayout>
</ScrollView>