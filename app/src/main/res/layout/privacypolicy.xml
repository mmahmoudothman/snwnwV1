<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.snwnw.snwnw.presentation.ui.views.English_Textview
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_20"
        android:textSize="@dimen/text_size_16"
        android:text="@string/privacy_policy"
        android:id="@+id/name_view"
        android:layout_below="@+id/thanks"
        android:textColor="@color/lila"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_30"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal"
        android:id="@+id/confirmation_layout"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_below="@+id/name_view"
        >
        <com.snwnw.snwnw.presentation.ui.views.English_Textview
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_120"
            android:background="@color/light_lila"
            android:id="@+id/enter_your_question"
            android:gravity="center"
            />
    </LinearLayout>

</RelativeLayout>