<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rating_view"
            android:layout_width="@dimen/margin_90"
            android:layout_height="@dimen/margin_90"
            android:background="@drawable/ic_star_bg"
            android:layout_alignTop="@+id/item_name"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_centerInParent="true"
            >
            <com.snwnw.snwnw.presentation.ui.views.English_Textview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="4.5"
                android:textSize="@dimen/text_size_14"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:id="@+id/rating_val"
                />
        </RelativeLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>