<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/toolbar"></include>
    </LinearLayout>
    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/margin_120"
        android:layout_height="@dimen/margin_120"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_blue_preview"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/margin_40"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo"
        android:orientation="vertical"
        >
        <com.snwnw.snwnw.presentation.ui.views.English_Textview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lila"
            android:text="@string/email"
            android:textSize="@dimen/margin_16"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_20"
            android:textStyle="bold"
            android:layout_below="@+id/toolbar"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_20"
            />

        <com.snwnw.snwnw.presentation.ui.views.English_EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_40"
            android:textColor="@color/lila"
            android:textSize="@dimen/margin_20"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_below="@+id/toolbar"
            android:gravity="right"
            android:layout_gravity="right"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/user_email"
            android:background="@drawable/txt_bg"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            />
        <LinearLayout
            android:id="@+id/btnLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_20"
            >

            <com.snwnw.snwnw.presentation.ui.views.English_Textview
                android:id="@+id/forget_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/forget_password"
                android:gravity="end"

                />
            <com.snwnw.snwnw.presentation.ui.views.English_Textview
                android:id="@+id/testbutton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/lila"
                android:text="@string/password"
                android:textSize="@dimen/margin_16"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_20"
                android:textStyle="bold"
                android:layout_below="@+id/toolbar"
                android:gravity="right"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_20"

                />


        </LinearLayout>

            <com.snwnw.snwnw.presentation.ui.views.English_EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_40"
                android:textColor="@color/lila"
                android:textSize="@dimen/margin_20"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:layout_below="@+id/toolbar"
                android:gravity="right"
                android:layout_gravity="right"
                android:id="@+id/userpassword"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:background="@drawable/txt_bg"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                />
        <com.snwnw.snwnw.presentation.ui.views.English_Textview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lila"
            android:text="@string/forget_password"
            android:textSize="@dimen/margin_20"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_40"
            android:textStyle="bold"
            android:layout_below="@+id/toolbar"
            android:gravity="right"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            />

        <com.snwnw.snwnw.presentation.ui.views.English_Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:text="@string/login"
            android:textSize="@dimen/margin_16"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_40"
            android:textStyle="bold"
            android:layout_below="@+id/toolbar"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/roundedbutton"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_20"
            />
        <com.snwnw.snwnw.presentation.ui.views.English_Textview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_120"
            android:text="@string/enter_reg"
            android:textColor="@color/lila"
            android:textSize="@dimen/margin_16"
            android:id="@+id/go"
            android:layout_gravity="center"
            />

    </LinearLayout>

</RelativeLayout>
</ScrollView>