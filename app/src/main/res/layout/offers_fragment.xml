<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.snwnw.snwnw.presentation.ui.views.English_EditText
        android:id="@+id/header_search_txt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="@string/search_in_my_list"
        android:textColorHint="@color/color2"
        android:textColor="@color/color2"
        android:gravity="right|center_vertical"
        android:textSize="@dimen/margin_16"
        android:layout_toLeftOf="@+id/menu_btn"
        android:layout_toRightOf="@+id/notify_icon"
        android:background="@drawable/rounded_bg_white"
        android:layout_margin="@dimen/margin_10"
        android:padding="@dimen/margin_5"
        android:drawableRight="@android:drawable/ic_menu_search"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color2"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/offersList"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/margin_20"
        android:paddingLeft="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        >
    </android.support.v7.widget.RecyclerView>
</LinearLayout>