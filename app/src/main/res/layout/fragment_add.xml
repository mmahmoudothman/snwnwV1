<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar"></include>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.snwnw.snwnw.presentation.ui.views.English_Textview
                android:id="@+id/add_place_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_40"
                android:layout_marginTop="@dimen/margin_30"
                android:text="@string/add_place"
                android:textColor="@color/lila"
                android:textSize="@dimen/text_size_26"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/add_place_txt"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_20"
                android:orientation="vertical">

                <com.snwnw.snwnw.presentation.ui.views.English_EditText
                    android:id="@+id/place_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40"
                    android:layout_below="@+id/toolbar"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:background="@drawable/rounded_bg_white"
                    android:gravity="right|center_vertical"
                    android:hint="@string/add_place"
                    android:paddingLeft="@dimen/margin_10"
                    android:paddingRight="@dimen/margin_10"
                    android:textSize="@dimen/margin_16"
                    android:textStyle="bold"

                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toolbar"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:background="@drawable/rounded_bg_white"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:id="@+id/ic_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/margin_5"
                        android:src="@drawable/ic_my_location" />

                    <Spinner
                        android:id="@+id/city_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:layout_toLeftOf="@+id/ic_location"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="@string/place"
                        android:paddingLeft="@dimen/margin_10"
                        android:paddingRight="@dimen/margin_10"
                        android:textColor="@color/lila"
                        android:textSize="@dimen/margin_20"
                        android:textStyle="bold"

                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toolbar"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:background="@drawable/rounded_bg_white"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:id="@+id/ic_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/margin_5"
                        android:src="@drawable/ic_my_location" />

                    <Spinner
                        android:id="@+id/type_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:layout_toLeftOf="@+id/ic_type"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="@string/place"
                        android:paddingLeft="@dimen/margin_10"
                        android:paddingRight="@dimen/margin_10"
                        android:textColor="@color/lila"
                        android:textSize="@dimen/margin_20"
                        android:textStyle="bold"

                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toolbar"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20"
                    android:background="@drawable/rounded_bg_white"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:id="@+id/ic_sub_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/margin_5"
                        android:src="@drawable/ic_my_location" />

                    <Spinner
                        android:id="@+id/sub_type"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right"
                        android:layout_toLeftOf="@+id/ic_sub_type"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="@string/place"
                        android:paddingLeft="@dimen/margin_10"
                        android:paddingRight="@dimen/margin_10"
                        android:textColor="@color/lila"
                        android:textSize="@dimen/margin_20"
                        android:textStyle="bold" />
                </RelativeLayout>


                <com.snwnw.snwnw.presentation.ui.views.English_Textview
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_30"
                    android:text="@string/upload_imgs"
                    android:textColor="@color/lila"
                    android:textSize="@dimen/text_size_26"
                    android:textStyle="bold" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_80"
                    android:layout_marginTop="@dimen/margin_20"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <!--<TextView-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_weight="5" />-->

                    <android.support.v7.widget.CardView
                        android:id="@+id/card1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_5"
                        android:layout_weight="20"
                        app:cardBackgroundColor="@color/light_lila"
                        app:cardCornerRadius="20dp">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/plus" />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_5"
                        android:layout_weight="20"
                        android:src="@drawable/ic_launcher"
                        app:cardBackgroundColor="@color/light_lila"
                        app:cardCornerRadius="20dp"
                        card_view:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/plus" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/card3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_5"
                        android:layout_weight="20"
                        app:cardBackgroundColor="@color/light_lila"
                        app:cardCornerRadius="20dp"
                        card_view:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/plus" />
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/card4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_5"
                        android:layout_weight="20"
                        app:cardBackgroundColor="@color/light_lila"
                        app:cardCornerRadius="20dp"
                        card_view:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/plus" />
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:id="@+id/card5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/margin_5"
                        android:layout_weight="20"
                        app:cardBackgroundColor="@color/light_lila"
                        app:cardCornerRadius="20dp"
                        card_view:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/plus" />
                    </android.support.v7.widget.CardView>

                    <!--<TextView-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_weight="5" />-->
                </LinearLayout>


                <com.snwnw.snwnw.presentation.ui.views.English_Button
                    android:id="@+id/add_place"
                    android:layout_width="@dimen/margin_120"
                    android:layout_height="@dimen/margin_40"
                    android:layout_below="@+id/toolbar"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_40"
                    android:background="@drawable/gradient_orange_color"
                    android:gravity="center"
                    android:padding="@dimen/margin_10"
                    android:text="@string/add"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>